<h1>商品一覧</h1>

<table class="table">
    <tr class="title">
      <th class="name">商品名</th>
      <th class="price">価格</th>
      <th class="detail"></th>
    </tr>

  <tbody>
    <% @items.each do |item| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= link_to '詳細', item %></td>
      </tr>
    <% end %>
  </tbody>
</table>

