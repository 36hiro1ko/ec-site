<h1>EcSite</h1>
<div id="usermenu">
	<ul>
		<% if current_user %>
		  <% if current_user.name %>
		      <li class="username">ようこそ<%= current_user.name %>さん</li>
		  <% end %>
		  <li><%= link_to "マイページ", "#" %></li>
		  <li><%= link_to "ログアウト", destroy_user_session_path, :method => :delete %></li>
		<% else %>
		  <li><%= link_to "登録", [:new, :user_registration] %></li>
		  <li><%= link_to "パスワード忘れ", [:new, :user_password] %></li>
		  <li><%= link_to "登録確認メール再送信", "#" %></li>
		<% end %>
	</ul>
</div>

<ul class="menu">
	<li><%= link_to "トップページ", "#" %></li>
	<li><%= link_to "商品一覧", "#" %></li>
	<li><%= link_to "送料・お支払について", "#" %></li>
	<li><%= link_to "お問い合わせ", "#" %></li>
</ul>
